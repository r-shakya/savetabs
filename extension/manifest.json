{
    "manifest_version": 2,
    "name": "Save Tabs",
    "version": "0.0.1",
    "description": "This extension save the tabs in your chrome browser for managing your projects!",
    "icons": {
        "128": "icons/icon128.png",
        "48": "icons/icon48.png",
        "16": "icons/icon16.png"
    },
    "browser_action":{
        "default_icon": "icons/icon16.png",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions":[
        "storage", "notifications", "tabs", "unlimitedStorage"
    ]
}